@{
    ViewBag.Title = "Mission Site!";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="jumbotron" style="background-image: url(../../Content/Images/landingpagemission.jpg); background-size: cover">
    <h1 style="font-family: Arial, Helvetica, sans-serif; -webkit-text-stroke: 2px black; color:white">Welcome to Mission Site!</h1>
    <h2 style="font-family: Arial, Helvetica, sans-serif; -webkit-text-stroke: 1px black; color:white"><i>@ViewBag.Quote1</i> @ViewBag.Quote2</h2>
    <button type="button" class="btn btn-primary btn-lg">Call to Action!</button>
</div>


<div class="row">
    <div class="col-md-4">
        <h2>Missions</h2>
        <p>
            This is where you can learn all about the different missions!
        </p>
        <p><a class="btn btn-default" href="@Url.Action("Index", "Rental")">Explore more &raquo;</a></p>
    </div>
    <div class="col-md-4">
        <h2>Have Questions?</h2>
        <p>Click below to get all of your missionary questions!</p>
        <p> </p><br />
        <p><a class="btn btn-default" href="@Url.Action("FAQ", "Home")">Get answers &raquo;</a></p>
    </div>
    <div class="col-md-4">
        <h2>Our Beginning</h2>
        <p>You can easily find out how we started a site to help future missionaries!</p>
        <p><a class="btn btn-default" href="@Url.Action("About", "Home")">Learn more &raquo;</a></p>
    </div>
</div>
<hr />  

<div class="container" style="width:auto">
    <div class="row">

         <div class="col-md-12" style="height:650px">
                <div class="embed-responsive embed-responsive-16by9">
                    <iframe style="width:100%; height:650px" class="embed-responsive-item" src="//www.youtube.com/embed/knYyMflxyuU"></iframe>
               </div>
         </div>

       </div>
</div>
     